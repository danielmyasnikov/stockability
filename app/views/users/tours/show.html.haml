.page-header
  %h2 Tour

  %dl.dl-horizontal
    %dt Tour name
    %dd= @tour.name.presence || 'N/A'
    %dt User
    %dd= @tour.user.presence.try(:login) || 'N/A'
    %dt Active?
    %dd= @tour.active? ? 'Yes' : 'No'
    %dt Started
    %dd= @tour.started.try(:strftime, "%H:%M - %d/%m/%Y") || 'N/A'
    %dt Completed
    %dd= @tour.completed.try(:strftime, "%H:%M - %d/%m/%Y") || 'N/A'
