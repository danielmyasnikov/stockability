.page-header
  = link_to 'New Product Barcode', new_admin_product_barcode_path, :class => 'btn btn-default pull-right'
  %h2= 'Product Barcodes'

= paginate @product_barcodes, :theme => 'comfy'

%table.table.table-hover.table-bordered
  %tr
    %th.main Barcode
    %th Sku
    %th Description
    %th Quantity
    %th
  - @product_barcodes.each do |product_barcode|
    %tr
      %td.main= product_barcode.barcode
      %td= product_barcode.sku
      %td= product_barcode.description
      %td= product_barcode.quantity
      %td
        .btn-group.btn-group-sm
          = link_to 'Edit', edit_admin_product_barcode_path(product_barcode), :class => 'btn btn-default'
          = link_to 'Delete', admin_product_barcode_path(product_barcode), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'

= paginate @product_barcodes, :theme => 'comfy'
